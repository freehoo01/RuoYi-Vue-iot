<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.iot.mapper.IotDeviceGroupMapper">
    <resultMap type="IotDeviceGroup" id="IotDeviceGroupResult">
        <id     property="groupId"      column="group_id"      />
        <result property="groupName"    column="group_name"    />
        <result property="description"  column="description"   />
        <result property="groupType"    column="group_type"    />
        <result property="parentId"     column="parent_id"     />
        <result property="createBy"     column="create_by"     />
        <result property="createTime"   column="create_time"   />
        <result property="updateBy"     column="update_by"     />
        <result property="updateTime"   column="update_time"   />
        <result property="remark"       column="remark"        />
    </resultMap>

    <sql id="selectIotDeviceGroupVo">
        select group_id, group_name, description, group_type, parent_id, create_by, create_time, update_by, update_time, remark from iot_device_group
    </sql>

    <select id="selectIotDeviceGroupById" parameterType="Long" resultMap="IotDeviceGroupResult">
        <include refid="selectIotDeviceGroupVo" />
        where group_id = #{groupId}
    </select>

    <select id="selectIotDeviceGroupList" parameterType="IotDeviceGroup" resultMap="IotDeviceGroupResult">
        <include refid="selectIotDeviceGroupVo" />
        <where>
            <if test="groupName != null and groupName != ''"> and group_name like concat('%', #{groupName}, '%')</if>
            <if test="groupType != null and groupType != ''"> and group_type = #{groupType}</if>
            <if test="parentId != null"> and parent_id = #{parentId}</if>
        </where>
    </select>

    <insert id="insertIotDeviceGroup" parameterType="IotDeviceGroup" useGeneratedKeys="true" keyProperty="groupId">
        insert into iot_device_group
        (<if test="groupName != null">group_name,</if>
         <if test="description != null">description,</if>
         <if test="groupType != null">group_type,</if>
         <if test="parentId != null">parent_id,</if>
         <if test="createBy != null">create_by,</if>
         create_time, update_time)
        values
        (<if test="groupName != null">#{groupName},</if>
         <if test="description != null">#{description},</if>
         <if test="groupType != null">#{groupType},</if>
         <if test="parentId != null">#{parentId},</if>
         <if test="createBy != null">#{createBy},</if>
         sysdate(), sysdate())
    </insert>

    <update id="updateIotDeviceGroup" parameterType="IotDeviceGroup">
        update iot_device_group
        <set>
            <if test="groupName != null">group_name = #{groupName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="groupType != null">group_type = #{groupType},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </set>
        where group_id = #{groupId}
    </update>

    <delete id="deleteIotDeviceGroupById" parameterType="Long">
        delete from iot_device_group where group_id = #{groupId}
    </delete>

    <delete id="deleteIotDeviceGroupByIds" parameterType="Long[]">
        delete from iot_device_group where group_id in 
        <foreach item="groupId" collection="array" open="(" separator="," close=")">
            #{groupId}
        </foreach>
    </delete>
</mapper>