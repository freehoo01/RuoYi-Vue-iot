<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.iot.mapper.IotFirmwareUpgradeTaskMapper">
    <resultMap type="IotFirmwareUpgradeTask" id="IotFirmwareUpgradeTaskResult">
        <id     property="taskId"          column="task_id"          />
        <result property="taskName"        column="task_name"        />
        <result property="firmwareId"      column="firmware_id"      />
        <result property="firmwareVersion" column="firmware_version" />
        <result property="targetDevices"   column="target_devices"   />
        <result property="targetGroupId"   column="target_group_id"   />
        <result property="status"          column="status"          />
        <result property="progress"        column="progress"        />
        <result property="successCount"    column="success_count"    />
        <result property="failCount"       column="fail_count"       />
        <result property="totalCount"      column="total_count"      />
        <result property="startTime"       column="start_time"       />
        <result property="endTime"         column="end_time"         />
        <result property="createBy"        column="create_by"        />
        <result property="createTime"      column="create_time"      />
        <result property="updateBy"        column="update_by"        />
        <result property="updateTime"      column="update_time"      />
        <result property="remark"          column="remark"          />
    </resultMap>

    <sql id="selectIotFirmwareUpgradeTaskVo">
        select task_id, task_name, firmware_id, firmware_version, target_devices, target_group_id, status, progress, success_count, fail_count, total_count, start_time, end_time, create_by, create_time, update_by, update_time, remark from iot_firmware_upgrade_task
    </sql>

    <select id="selectIotFirmwareUpgradeTaskById" parameterType="Long" resultMap="IotFirmwareUpgradeTaskResult">
        <include refid="selectIotFirmwareUpgradeTaskVo" />
        where task_id = #{taskId}
    </select>

    <select id="selectIotFirmwareUpgradeTaskList" parameterType="IotFirmwareUpgradeTask" resultMap="IotFirmwareUpgradeTaskResult">
        <include refid="selectIotFirmwareUpgradeTaskVo" />
        <where>
            <if test="taskName != null and taskName != ''"> and task_name like concat('%', #{taskName}, '%')</if>
            <if test="firmwareVersion != null and firmwareVersion != ''"> and firmware_version like concat('%', #{firmwareVersion}, '%')</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
            <if test="targetGroupId != null"> and target_group_id = #{targetGroupId}</if>
        </where>
        order by create_time desc
    </select>

    <insert id="insertIotFirmwareUpgradeTask" parameterType="IotFirmwareUpgradeTask" useGeneratedKeys="true" keyProperty="taskId">
        insert into iot_firmware_upgrade_task
        (<if test="taskName != null">task_name,</if>
         <if test="firmwareId != null">firmware_id,</if>
         <if test="firmwareVersion != null">firmware_version,</if>
         <if test="targetDevices != null">target_devices,</if>
         <if test="targetGroupId != null">target_group_id,</if>
         <if test="status != null">status,</if>
         <if test="progress != null">progress,</if>
         <if test="successCount != null">success_count,</if>
         <if test="failCount != null">fail_count,</if>
         <if test="totalCount != null">total_count,</if>
         <if test="startTime != null">start_time,</if>
         <if test="endTime != null">end_time,</if>
         <if test="createBy != null">create_by,</if>
         create_time, update_time)
        values
        (<if test="taskName != null">#{taskName},</if>
         <if test="firmwareId != null">#{firmwareId},</if>
         <if test="firmwareVersion != null">#{firmwareVersion},</if>
         <if test="targetDevices != null">#{targetDevices},</if>
         <if test="targetGroupId != null">#{targetGroupId},</if>
         <if test="status != null">#{status},</if>
         <if test="progress != null">#{progress},</if>
         <if test="successCount != null">#{successCount},</if>
         <if test="failCount != null">#{failCount},</if>
         <if test="totalCount != null">#{totalCount},</if>
         <if test="startTime != null">#{startTime},</if>
         <if test="endTime != null">#{endTime},</if>
         <if test="createBy != null">#{createBy},</if>
         sysdate(), sysdate())
    </insert>

    <update id="updateIotFirmwareUpgradeTask" parameterType="IotFirmwareUpgradeTask">
        update iot_firmware_upgrade_task
        <set>
            <if test="taskName != null">task_name = #{taskName},</if>
            <if test="firmwareId != null">firmware_id = #{firmwareId},</if>
            <if test="firmwareVersion != null">firmware_version = #{firmwareVersion},</if>
            <if test="targetDevices != null">target_devices = #{targetDevices},</if>
            <if test="targetGroupId != null">target_group_id = #{targetGroupId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="progress != null">progress = #{progress},</if>
            <if test="successCount != null">success_count = #{successCount},</if>
            <if test="failCount != null">fail_count = #{failCount},</if>
            <if test="totalCount != null">total_count = #{totalCount},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = sysdate()
        </set>
        where task_id = #{taskId}
    </update>

    <delete id="deleteIotFirmwareUpgradeTaskById" parameterType="Long">
        delete from iot_firmware_upgrade_task where task_id = #{taskId}
    </delete>

    <delete id="deleteIotFirmwareUpgradeTaskByIds" parameterType="Long[]">
        delete from iot_firmware_upgrade_task where task_id in 
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </delete>
</mapper>